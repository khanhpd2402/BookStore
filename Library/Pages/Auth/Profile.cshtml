@page
@model Library.Pages.Auth.ProfileModel
@{
    ViewData["Title"] = "Profile";
}
<div class="tg-sectionspace tg-haslayout">
    <div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">User Options</h5>
                    <a href="/Auth/Profile?st=1" class="card-link">User Info</a><br>
                    <a href="/Auth/Profile?st=2" class="card-link">Reset Password</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">Edit Profile</h5>
                    @if (Model.status == "1")
                    {
                        <form asp-page="/Auth/Profile" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full name</label>
                                <input type="text" name="fullname" class="form-control" required value="@Model.user.Fullname" id="name" placeholder="Enter your name">
                            </div>
                                <br>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" value="@Model.user.Mail" id="email" readonly placeholder="Enter your email">
                            </div>
                            <br>
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" class="form-control" id="location" placeholder="Enter your location">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                    }
                    @if (Model.status == "2")
                    {
                        <form asp-page="/Auth/Profile" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">User name</label>
                                <input type="text" class="form-control" value="@Model.user.Username" id="name" placeholder="Enter your name" readonly>  
                            </div>
                            <br>
                            <div class="mb-3">
                                <label for="email" class="form-label">Password</label>
                                <input type="password" name="password" value="@Model.user.Password" class="form-control" required id="password">
                            </div>
                            <br>
                            <div class="mb-3">
                                <label for="location" class="form-label">Confirm password</label>
                                <input type="password" name="cfPassword" class="form-control" required id="cfPassword">
                            </div>
                                <br>
                            <button type="submit" class="btn btn-primary">Save Changes</button>

                        </form>
                    }

                    @if (Model.mess != null)
                    {
                        <div class="mb-3">
                            <label style="color:red" for="name" class="form-label">@Model.mess</label>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
</div>