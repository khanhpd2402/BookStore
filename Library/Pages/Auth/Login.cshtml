@page
@model Library.Pages.Auth.LoginModel

@{
    Layout = "Shared/_LayoutLog";
    ViewData["Title"] = "Login";
    string mess = (string)HttpContext.Session.GetString("message");
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <strong class="tg-logo"><a href="/Books/Index"><img src="~/img/logo.png" alt="company name here"></a></strong>
                </div>

                <div class="d-flex align-items-center px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;" asp-page="/Auth/Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
                        <h5 class="text-danger">@Html.ValidationMessage("wrong")</h5>

                        <h5 class="text-danger">@mess</h5>

                        <div class="form-outline mb-4">
                            <label asp-for="User.Username" class="control-label"></label>
                            <input asp-for="User.Username" class="form-control form-control-lg" />
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="User.Password" class="control-label"></label>
                            <input asp-for="User.Password" class="form-control form-control-lg" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4 d-flex">
                            <label class="control-label p-2"><a href="/Auth/Register">Register</a></label>
                            <label class="control-label p-2"><a href="/Auth/RePassword">Forget password</a></label>
                        </div>


                        <div class="pt-3 mb-4">
                            <input type="submit" value="Login" class="btn btn-success btn-lg btn-block" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(window).load(function () {
        $('body').sakura();
    });
</script>
